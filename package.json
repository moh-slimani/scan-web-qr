{
  "name": "scan-web-qr",
  "displayName": "Scan Web Qr",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.3.1",
  "description": "Scan Qr codes from the web directly with a screenshot",
  "author": "Mohamed Slimani",
  "license": "MIT",
  "homepage": "https://github.com/moh-slimani/scan-web-qr",
  "repository": "https://github.com/moh-slimani/scan-web-qr",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "npm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "cross-env NODE_ENV=development esno scripts/prepare.ts",
    "dev:background": "cross-env NODE_ENV=development npm run build:background -- --mode development",
    "dev:web": "cross-env NODE_ENV=development vite",
    "dev:js": "cross-env NODE_ENV=development npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack-extention": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension-chrome.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension-firefox.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "lint": "eslint --cache .",
    "test": "vitest test",
    "test:e2e": "playwright test",
    "postinstall": "simple-git-hooks",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cropperjs": "^1.6.1",
    "qrcode-decoder": "^0.3.3",
    "vue-cropperjs": "^5.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.36.0",
    "@ffflorian/jszip-cli": "^3.4.1",
    "@iconify/json": "^2.2.61",
    "@playwright/test": "^1.33.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.16.5",
    "@types/vue-cropperjs": "^4.1.6",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@unocss/reset": "^0.51.12",
    "@vitejs/plugin-vue": "^4.2.1",
    "@vue/compiler-sfc": "^3.2.47",
    "@vue/test-utils": "^2.3.2",
    "@vueuse/core": "^10.1.2",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.40.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "jsdom": "^21.1.2",
    "kolorist": "^1.8.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.4.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "unocss": "^0.51.12",
    "unplugin-auto-import": "^0.15.3",
    "unplugin-icons": "^0.16.1",
    "unplugin-vue-components": "^0.24.1",
    "vite": "^4.3.5",
    "vitest": "^0.31.0",
    "vue": "^3.2.47",
    "vue-demi": "^0.14.0",
    "web-ext": "^7.6.2",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
